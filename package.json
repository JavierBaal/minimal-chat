{
  "name": "minimal-chat",
  "version": "0.0.0",
  "main": "src/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:serve": "vite dev --host",
    "electron:build": "electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.minimalchat.portable",
    "productName": "MinimalChat",
    "win": {
      "target": "portable"
    },
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ]
  },
  "devDependencies": {
    "electron": "^35.0.1"
  }
}
